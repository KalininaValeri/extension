{
  "manifest_version": 2,
  "name": "messege",
  "description": "message to the user",
  "version": "1.0",
  "icons": {
    "128": "128.png",
    "48": "48.png",
    "16": "16.png"
  },
  "background": {
    "scripts": ["jquery.js", "background.js"]
  },
  "permissions": [
    "tabs",
    "notifications",
    "webNavigation",
    "http://*/",
    "https://*/",
    "identity",
    "identity.email"
  ],
  "browser_action": {
    "default_title": "to open a list of sites",
    "default_icon": "48.png",
    "default_popup": "popup.html"
  },
  "web_accessible_resources": [
    "/content.js"
  ]
}

